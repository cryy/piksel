{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": false,
      "noImplicitAny": true,
      "strict": true,
      "allowJs": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "esModuleInterop": true,
      "typeRoots": [],
      "lib": ["ES2020", "DOM"]
    },
    "exclude": [
      "node_modules"
